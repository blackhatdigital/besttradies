<div class="container">
<%= render 'layouts/dashboard_sidebar' %>
<div class="col-md-9 col-sm-12 nopadding">
	<div class="inbox-head">
		<h3>Open Jobs</h3>
	</div>
	<div class="inbox-body">


		<div class="myjobs-list">
			
			<div class="joblisting-header-light row">
				<div class="col-md-1 text-center">Status</div>
				<div class="col-md-3 text-center">Job Title</div>
				<div class="col-md-2 text-center">Proposals</div>
				<div class="col-md-2 text-center">Started</div>
				<div class="col-md-2 text-center">Budget</div>
				<div class="col-md-2"></div>
			</div>

			<% @jobs.each do |job| %>

			<div class="row joblisting">
				<div class="col-md-1">
					<div class="job-cont-details text-center">
						<% if job.open == true %>
						<div class="job-open-green">OPEN</div>
						<% else %>
						<div class="job-closed-red">CLOSED</div>
						<% end %>
					</div>
				</div>
				<div class="col-md-3">
					<div class="joblisting-title-dash text-center"><%= link_to job.name, job %></div>

				</div>
				<div class="col-md-2 text-center">
					<div class="joblisting-proposals"><%= job.proposals.count %></div>
				</div>
				<div class="col-md-2 text-center">
					<div class="joblisting-time"><span class="glyphicon glyphicon-time"></span> <%= time_ago_in_words(job.created_at) + " ago" %> </div>
				</div>
				<div class="col-md-2 text-center">
					<div class="joblisting-budget"><% if job.price_per_hour != nil %>
						<span class="job-price"><%= number_to_currency(job.price_per_hour, precision: 0) %></span><span class="job-price-sml"> /hour</span>
						<% else %>
						<span class="job-price"><%= number_to_currency(job.budget, precision: 0) %></span> <span class="job-price-sml"></span>
						<% end %></div>
				</div>
				<div class="col-md-2 joblisting-budget ">
					<%= link_to "Edit", edit_job_path(job), class: "btn btn-success btn-xs" %>
					<%= link_to "Delete", job, method: :delete, data: {confirm: "Are you sure you want to delete this job?"}, class: "btn btn-danger btn-xs" %>
				</div>
			</div>
			<% end %>	
		</div>


	</div>
</div>
</div>
</div>
</div>


